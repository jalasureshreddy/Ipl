<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <TableRow
        android:orientation="vertical"
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="left"
            android:paddingLeft="8.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <ImageView
                android:layout_gravity="left"
                android:id="@+id/ivPoints"
                android:background="@null"
                android:visibility="gone"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip" />

            <TextView
                android:textColor="@color/colorTextPrimary"
                android:gravity="left"
                android:layout_gravity="left"
                android:id="@+id/tvPointTeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEAM"
                android:layout_weight="1.0" />

        </LinearLayout>

        <TextView
            android:textColor="@color/colorTextPrimary"
            android:gravity="center"
            android:id="@+id/tvPointTeamMatches"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="M"
            android:ems="2" />

        <TextView
            android:textColor="@color/colorTextPrimary"
            android:gravity="center"
            android:id="@+id/tvPointTeamWins"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="W"
            android:ems="2" />

        <TextView
            android:textColor="@color/colorTextPrimary"
            android:gravity="center"
            android:id="@+id/tvPointTeamLoss"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="L"
            android:ems="2" />

        <TextView
            android:textColor="@color/colorTextPrimary"
            android:gravity="center"
            android:id="@+id/tvPointTeamDraw"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="D"
            android:ems="2" />

        <TextView
            android:textColor="@color/colorTextPrimary"
            android:gravity="center"
            android:id="@+id/tvPointTeamRunRate"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="RR"
            android:ems="3" />

        <TextView
            android:textColor="@color/colorTextPrimary"
            android:gravity="center"
            android:id="@+id/tvPointTeamPoints"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="P"
            android:ems="2" />

    </TableRow>

    <View
        android:background="@color/colorTextSecondaryTransparent"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip" />

</LinearLayout>