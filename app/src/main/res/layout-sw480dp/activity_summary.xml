<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="Match Summary"
            android:textStyle="bold"
            android:textSize="@dimen/text_480dp_lines"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/toolbar_title" />

    </android.support.v7.widget.Toolbar>

<android.support.v4.widget.NestedScrollView
    android:id="@+id/nested"
    android:layout_below="@+id/toolbar"
    android:layout_above="@+id/adView"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:id="@+id/match_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match - 1"
            android:textSize="@dimen/text_480dp_lines" />


        <android.support.v7.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4.0dp"
            card_view:cardElevation="10.0dp"
            card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


        <TableRow
            android:background="#5191CD"
            android:id="@+id/psts_table"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="left"
                android:paddingLeft="8.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">


                <TextView
                    android:textColor="@color/colorWhite"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:id="@+id/match_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEAMS"
                    android:textSize="@dimen/text_320dp_lines"
                    android:textStyle="bold"
                    android:layout_weight="1.0"/>

            </LinearLayout>

            <TextView
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:id="@+id/scores_one"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="NRR"
                android:textSize="@dimen/text_320dp_lines"
                android:textStyle="bold"
                android:ems="7"/>

        </TableRow>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8.0dip">

                <TableRow
                    android:id="@+id/table_runs1"
                    android:layout_marginTop="1dp"
                    android:orientation="vertical"
                    android:padding="8.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="start"
                        android:paddingLeft="8.0dip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:textColor="@color/colorTextPrimary"
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:id="@+id/player_run1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Players"
                            android:textSize="@dimen/text_320dp_lines"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="end"
                        android:paddingLeft="8.0dip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:textColor="@color/colorTextPrimary"
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:id="@+id/bolwer_run1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Players"
                            android:textSize="@dimen/text_320dp_lines"
                            android:layout_weight="1"/>

                    </LinearLayout>
                </TableRow>
            </LinearLayout>

            <View
                android:background="@color/colorTextSecondaryTransparent"
                android:layout_width="fill_parent"
                android:layout_height="1dip" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8.0dip">

                <TableRow
                    android:id="@+id/table_runs2"
                    android:layout_marginTop="1dp"
                    android:orientation="vertical"
                    android:padding="8.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="start"
                        android:paddingLeft="8.0dip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:textColor="@color/colorTextPrimary"
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:id="@+id/player_run2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Players"
                            android:textSize="@dimen/text_320dp_lines"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="end"
                        android:paddingLeft="8.0dip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:textColor="@color/colorTextPrimary"
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:id="@+id/bolwer_run2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Players"
                            android:textSize="@dimen/text_320dp_lines"
                            android:layout_weight="1"/>

                    </LinearLayout>
                </TableRow>
            </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4.0dp"
            card_view:cardElevation="10.0dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TableRow
                    android:background="#5191CD"
                    android:id="@+id/psts_table1"
                    android:layout_marginTop="1dp"
                    android:orientation="vertical"
                    android:padding="16.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="left"
                        android:paddingLeft="8.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">


                        <TextView
                            android:textColor="@color/colorWhite"
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:id="@+id/match_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TEAMS"
                            android:textSize="@dimen/text_320dp_lines"
                            android:textStyle="bold"
                            android:layout_weight="1.0"/>

                    </LinearLayout>

                    <TextView
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:id="@+id/scores_two"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="NRR"
                        android:textSize="@dimen/text_320dp_lines"
                        android:textStyle="bold"
                        android:ems="7"/>

                </TableRow>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8.0dip">

                    <TableRow
                        android:id="@+id/table_runs3"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical"
                        android:padding="8.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="start"
                            android:paddingLeft="8.0dip"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:textColor="@color/colorTextPrimary"
                                android:gravity="left"
                                android:layout_gravity="left"
                                android:id="@+id/player_run11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Players"
                                android:textSize="@dimen/text_320dp_lines"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="end"
                            android:paddingLeft="8.0dip"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:textColor="@color/colorTextPrimary"
                                android:gravity="left"
                                android:layout_gravity="left"
                                android:id="@+id/bolwer_run11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Players"
                                android:textSize="@dimen/text_320dp_lines"
                                android:layout_weight="1"/>

                        </LinearLayout>
                    </TableRow>
                </LinearLayout>

                <View
                    android:background="@color/colorTextSecondaryTransparent"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8.0dip">

                    <TableRow
                        android:id="@+id/table_runs21"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical"
                        android:padding="8.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="start"
                            android:paddingLeft="8.0dip"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:textColor="@color/colorTextPrimary"
                                android:gravity="left"
                                android:layout_gravity="left"
                                android:id="@+id/player_run21"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Players"
                                android:textSize="@dimen/text_320dp_lines"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="end"
                            android:paddingLeft="8.0dip"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:textColor="@color/colorTextPrimary"
                                android:gravity="left"
                                android:layout_gravity="left"
                                android:id="@+id/bolwer_run21"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Players"
                                android:textSize="@dimen/text_320dp_lines"
                                android:layout_weight="1"/>

                        </LinearLayout>
                    </TableRow>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:id="@+id/match_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="@dimen/text_480dp_lines" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        android:layout_alignParentBottom="true"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>